<InScreenWindow@BoxLayout>:
    orientation: "vertical"

<OperationAreaBox@BoxLayout>:
    orientation: "vertical"

<TitleLine@BoxLayout>:
    display_title: "default"
    orientation: "horizontal"
    ScreenTitleLabel:
        font_name: fn_title
        font_size: fs_title
        text: root.display_title

<OpAreaIntro@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        LabelInfo:
            id: labelinfo
            size_hint: 1, 0.15
            text: "Sometext..."

<OpAreaScan@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image1

<OpAreaTx@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image2

<OpAreaPub@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image3

<OpAreaUtxo@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image4

<NavBar@BoxLayout>:
    id: navbar
    orientation: "horizontal"
    size_hint: 1, 0.05
    ButtonScreenNav:
        id: button_nav_intro
        target: "screen_intro"
        disabled: True
        text: "screen_intro"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_scan
        target: "screen_scan"
        text: "screen_scan"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_tx
        target: "screen_tx"
        text: "screen_tx"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_pub
        target: "screen_pub"
        text: "screen_pub"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_utxo
        target: "screen_utxo"
        text: "screen_utxo"
        on_release: root.on_release_navbar(self)

<Ribbon@BoxLayout>:
    text_ribbon: "by Sziller"
    image_source: None
    orientation: "horizontal"
    LabelRibbon:
        text: root.text_ribbon
    AsyncImage:
        keep_ratio: True
        allow_stretch: False
        size_hint: 0.05, 1
        source: root.image_source

#   ---------------------------------------------------------------------
#   - Label:                                                    START   -
#   ---------------------------------------------------------------------

<ScreenTitleLabel@Label>:
    font_size: fs_title
    font_name: fn_title

<LabelInfo@Label>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 1
    font_size: fs_subsubtitle
    font_name: fn_subsubtitle
    text_size: self.size
    halign: 'center'  ## center, right, left
    valign: 'center'  ## middle, top, bottom

<LabelRibbon@Label>:
    halign: 'right'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom
    font_name: fn_button
    font_size: fs_button
    size_hint: 0.95, 1
    text_size: self.size
    padding: (10, 0)

<LabelPH@Label>:

#   ---------------------------------------------------------------------
#   - Label:                                                    ENDED   -
#   ---------------------------------------------------------------------


#   ---------------------------------------------------------------------
#   - TextInput:                                                START   -
#   ---------------------------------------------------------------------

<TextInParagraph@TextInput>:
    font_name: fn_data
    font_size: fs_data
    text_size: self.size
    line_height: 40
    focus: True
    hint_text: "enter project name"
    padding: (2, 2)
    foreground_color: (1,1,1,1)
    background_color: (1,1,1,0.2)
    cursor_color: (1,1,1,1)
    halign: 'left'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

#   ---------------------------------------------------------------------
#   - TextInput:                                                ENDED   -
#   ---------------------------------------------------------------------

#   ---------------------------------------------------------------------
#   - Button:                                                   START   -
#   ---------------------------------------------------------------------

<ButtonScreenNav@Button>:
    font_name: fn_button
    font_size: fs_button
    background_color: 0.3, 0.4, 0.3, 0.45
    target: ""
    text_size: self.size
    color: (1, 1, 1)
    padding: (2, 2)
    text: "ToggleButton"
    halign: 'center'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

#   ---------------------------------------------------------------------
#   - Button:                                                   ENDED   -
#   ---------------------------------------------------------------------